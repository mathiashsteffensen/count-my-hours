<!DOCTYPE html>
<html lang="en">
    <%- include('./components/head'); %>
    <body>
        <%- include('./components/header'); %>
        <main>
            <form action="/request-feature" method="POST">
                <div class="form-title-container">
                    <h2>Request A Feature</h2>
                </div>
                <div class="request-container">
                    <% if (errorMessage !== undefined) { %>
                        <p class="error"><%= errorMessage %></p>
                    <% } %>
                    <label for="message">Describe the feature or bug fix you want to request</label>
                    <textarea name="message" id="" cols="40" rows="10"></textarea>
                    <label for="email">Enter your email and we'll get back to you ASAP :)</label>
                    <input autocomplete="email" required name="email" id="email" type="email">
                    <button>Submit</button>
                </div>
            </form>
        </main>
        <%- include('./components/footer'); %>
        <script>
            window.onload = function() {
                document.querySelector('button').addEventListener('click', function()
                {
                    document.querySelector('button').innerHTML = "Your request has been received"
                })
            }
        </script>
    </body>
</html>